<%= form_with model: [@bulk_discount.merchant, @bulk_discount], method: :patch, local: true do |f| %>
  <%= f.label :percent_discount %><br/>
  <%= f.number_field :percent_discount %><br/>
  <%= f.label :threshold %><br/>
  <%= f.number_field :threshold, value: nil, in: 1...100 %><br/><br/>
  <%= f.submit 'Update Discount'%>
<% end %>
